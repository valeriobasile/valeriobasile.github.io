<title>Politweets coding</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link rel="stylesheet" type="text/css" href="politweets.css" />
<script language="javascript">
function radio_check(elem_list) {
    res = false;
    for(var i = 0 ; i < elem_list.length; i++) {
        res = res || elem_list[i].checked;
        
    }
    return res;
}

function radio_value(elem_list) {
    res = '';
    for(var i = 0 ; i < elem_list.length; i++) {
        if (elem_list[i].checked) {
            res = elem_list[i].value
        }
    }
    return res;
}

function set_visible(variable, visible) {
    var div = document.getElementById('div_'+variable);
    if (visible) {
        div.style.visibility = "visible";
    }
    else {
        div.style.visibility = "hidden";
    }    
}

function check_complete() {
    var T2c = radio_check(document.getElementsByName('T2'));
    var T3c = radio_check(document.getElementsByName('T3'));
    var T4c = radio_check(document.getElementsByName('T4'));
    var T5c = radio_check(document.getElementsByName('T5'));
    var T6c = radio_check(document.getElementsByName('T6'));
    var T7c = radio_check(document.getElementsByName('T7'));
    var T8c = radio_check(document.getElementsByName('T8'));
    var T9c = radio_check(document.getElementsByName('T9'));
    var T10c = radio_check(document.getElementsByName('T10'));
    var T2v = radio_value(document.getElementsByName('T2'));
    var T4v = radio_value(document.getElementsByName('T4'));
    var T7v = radio_value(document.getElementsByName('T7'));

    var complete = T2c && (T2v!='2' || T3c) && T4c && T5c && (T4v!='8' || T6c) && T7c && (T7v=='3' || T8c) && T9c && T10c;
    if (!complete) {
        window.alert("please select a value for all the variables");
    }
    else {
//        window.alert("ok");
        document.forms['tweet_form'].submit();
    }
}

function check_visibility() {
    var T2 = radio_value(document.getElementsByName('T2'));
    var T4 = radio_value(document.getElementsByName('T4'));
    var T7 = radio_value(document.getElementsByName('T7'));

    // T3 is visible only if T2 is 2
    set_visible('T3', T2=='2');

    // T6 is visible only if T4 is 8
    set_visible('T6', T4=='8');

    // 'topic of personal' is visible only if Personal is 'personal' or 'mixed
    set_visible('T8', T7=='1' || T7=='2');
}
</script>
